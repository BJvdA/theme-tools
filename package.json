{
  "name": "theme-check-vscode",
  "description": "VSCode theme-check liquid file type linter extension",
  "author": "Shopify",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Shopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/shopify/theme-check-vscode"
  },
  "scripts": {
    "build": "vsce package"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "languages": [
    {
      "id": "liquid",
      "extensions": [
        ".liquid"
      ],
      "aliases": [
        "Liquid"
      ]
    }
  ],
  "activationEvents": [
    "onLanguage:liquid"
  ],
  "main": "./extension",
  "contributes": {
    "languages": [
      {
        "id": "liquid",
        "aliases": [
          "Liquid",
          "liquid",
          "HTML Liquid"
        ],
        "extensions": [
          ".liquid"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "1.43.0",
    "vscode-test": "^1.3.0"
  }
}
