{
  "name": "theme-check",
  "version": "1.0.0",
  "description": "The ultimate linter for Liquid, this time in TypeScript",
  "main": "dist/index.js",
  "repository": "https://github.com/Shopify/theme-check-js",
  "author": "CP Clermont <cp.clermont@shopify.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "cli": "node -r ts-node/register packages/node/cli",
    "cli:debug": "node --inspect-brk packages/node/dist/cli",
    "cli:debug:ts": "node --inspect-brk -r ts-node/register packages/node/cli",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
