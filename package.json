{
  "name": "theme-check-vscode",
  "description": "Liquid Linter VSCode extension by Shopify",
  "author": "Shopify",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Shopify",
  "repository": {
    "type": "git",
    "url": "https://github.com/shopify/theme-check-vscode"
  },
  "scripts": {
    "build": "vsce package"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "dependencies": {
    "vscode-languageclient": "^6.1.3"
  },
  "languages": [
    {
      "id": "liquid",
      "extensions": [
        ".liquid"
      ],
      "aliases": [
        "Liquid"
      ]
    }
  ],
  "activationEvents": [
    "onLanguage:liquid"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "title": "Theme Check | Liquid Linter by Shopify",
      "properties": {
        "themeCheck.languageServerPath": {
          "type": ["string", "null"],
          "default": null,
          "description": "Path to theme-check-language-server. Defaults to `which theme-check-default-server` if available on `$PATH`."
        }
      }
    },
    "languages": [
      {
        "id": "liquid",
        "aliases": [
          "Liquid",
          "liquid",
          "HTML Liquid"
        ],
        "extensions": [
          ".liquid"
        ]
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "1.43.0",
    "vscode-test": "^1.3.0"
  }
}
