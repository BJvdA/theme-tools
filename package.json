{
  "name": "liquid-language-server-monorepo",
  "version": "1.0.0",
  "description": "A Liquid Language Server for all your DX needs",
  "repository": "https://github.com/Shopify/liquid-language-server",
  "author": "CP Clermont <@charlespwd>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "build:node": "yarn --cwd packages/node build",
    "build:playground": "yarn --cwd playground build",
    "dev:playground": "yarn --cwd playground dev",
    "format": "prettier --write packages/**/*.ts",
    "cli": "node packages/node/dist/cli",
    "cli:ts": "node -r ts-node/register packages/node/src/cli",
    "cli:debug": "node --inspect-brk packages/node/dist/cli",
    "cli:debug:ts": "node --inspect-brk -r ts-node/register packages/node/cli",
    "playground": "npx http-server playground/dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "prettier": "^2.8.4",
    "style-loader": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "vscode-languageserver": "^8.0.2"
  }
}
