{
  "name": "theme-check-vscode",
  "author": {
    "name": "charlespwd"
  },
  "publisher": "Shopify",
  "license": "SEE LICENSE IN LICENSE.md",
  "displayName": "Theme Check",
  "description": "Linter for Shopify Liquid theme files",
  "categories": [
    "Programming Languages",
    "Linters",
    "Language Packs"
  ],
  "keywords": [
    "liquid",
    "shopify",
    "theme-check"
  ],
  "preview": false,
  "icon": "shopify_glyph.png",
  "version": "0.2.2",
  "homepage": "https://github.com/shopify/theme-check-vscode",
  "bugs": {
    "url": "https://github.com/shopify/theme-check-vscode/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shopify/theme-check-vscode.git"
  },
  "scripts": {
    "prebuild": "yarn && rm -rf dist language-configuration.json",
    "build": "yarn build:extension && yarn build:language-config",
    "build:extension": "webpack --mode production",
    "build:language-config": "scripts/make-language-configuration",
    "package": "yarn build && vsce package",
    "test": "mocha 'src/**/*.test.js'"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "dependencies": {
    "vsce": "^1.87.0",
    "vscode-languageclient": "^7.0.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "themeCheck.restart",
        "title": "Theme Check: Restart Server"
      }
    ],
    "configuration": {
      "title": "Theme Check | Liquid Linter by Shopify",
      "properties": {
        "themeCheck.languageServerPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to theme-check-language-server. Defaults to `which theme-check-language-server` if available on `$PATH`."
        }
      }
    },
    "languages": [
      {
        "id": "liquid",
        "aliases": [
          "Liquid",
          "liquid",
          "HTML Liquid"
        ],
        "extensions": [
          ".liquid"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "1.43.0",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "vscode-test": "^1.3.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  }
}
