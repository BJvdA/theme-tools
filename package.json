{
  "name": "@shopify/code-mirror-language-client-monorepo",
  "version": "0.0.0",
  "description": "A Language Client for CodeMirror",
  "repository": "https://github.com/Shopify/code-mirror-language-client",
  "author": "CP Clermont <cp.clermont@shopify.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn --cwd packages/language-client build",
    "dev:client": "yarn --cwd packages/language-client dev",
    "dev:playground": "yarn --cwd packages/playground dev",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "format:check": "prettier --check --ignore-unknown \"packages/*/src/**/*.ts\"",
    "playground": "npx http-server playground/dist",
    "test": "TS_NODE_PROJECT='./tsconfig.test.json' mocha 'packages/*/src/**.spec.ts'"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@codemirror/lint": "^6.2.0",
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.9.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vscode-languageserver-protocol": "^3.17.3",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
