{
  "name": "@shopify/code-mirror-language-client",
  "version": "0.0.7",
  "description": "A Language Client for CodeMirror",
  "repository": "https://github.com/Shopify/code-mirror-language-client",
  "author": "CP Clermont <cp.clermont@shopify.com>",
  "license": "MIT",
  "main": "./dist/umd/index.js",
  "typings": "./dist/umd/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/umd/index.js"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:umd",
    "build:esm": "tsc -b tsconfig.esm.json",
    "build:umd": "tsc -b tsconfig.umd.json",
    "dev": "yarn build:esm --watch"
  },
  "dependencies": {
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-languageserver-protocol": "^3.17.3"
  },
  "peerDependencies": {
    "@codemirror/lint": "^6.2.0",
    "@codemirror/state": "^6.2.0",
    "@codemirror/view": "^6.9.2"
  }
}
