// should break on html tags that always break
<html>
  <head>
  </head>
  <body>
    <main>
    </main>
  </body>
</html>

// should break if more than 2 attributes
<div x="1" y="2"></div>
<div
  x="1"
  y="2"
  z="3"
>
</div>

// should indent child
<div x="1" y="2">Child</div>
<div
  x="1"
  y="2"
  z="3"
>
  Child
</div>

// should not break when it fits on a line
<div x="1" y="2"><div>Hello</div></div>

// should break if there's more than one child on a line
<div x="1" y="2">
  <div>Hello</div>
  <div>World</div>
</div>
